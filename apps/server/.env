# -----------------------
# Server Configuration
# -----------------------
PORT=4000
NODE_ENV=development

# -----------------------
# Database
# -----------------------
# Using MongoDB Atlas cluster
MONGODB_URI=

# -----------------------
# JWT Tokens
# -----------------------
ACCESS_TOKEN_SECRET=
REFRESH_TOKEN_SECRET=

ACCESS_TOKEN_EXPIRES=15m
REFRESH_TOKEN_EXPIRES=7d

# -----------------------
# CORS / Cookies
# -----------------------
# IMPORTANT: Replace this URL with your actual Codespaces forwarded URL for port 5173.
# This tells backend which frontend origin is allowed.
CORS_ORIGIN=https:

# Name for refresh token cookie
REFRESH_COOKIE_NAME=tf_refresh

# Security settings for cookies
COOKIE_SECURE=true
COOKIE_SAMESITE=none
